# Make my initials using turtle


# make turtle
import turtle
win = turtle.Screen()
t = turtle.Turtle()
win.bgcolor("cyan")

t.pensize(10)               #increase pensize
t.pencolor("white")         #set pen color 
t.shape("arrow")




# make turtle
import turtle
win = turtle.Screen()
t = turtle.Turtle()
win.bgcolor("cyan")

t.pensize(10)               #increase pensize
t.pencolor("white")         #set pen color 
t.shape("arrow")


# Drawing the 1st initial
t.penup()
t.goto(-200,100)
t.pendown()
t.right(90)
t.forward(320)
t.right(-90)
t.forward(180)
t.penup()

# Drawing the 2nd initial
t.goto(200,100)
t.penup()
t.pendown()
t.right(90)
t.forward(320)
t.right(-90)
t.forward(180)
t.penup()
