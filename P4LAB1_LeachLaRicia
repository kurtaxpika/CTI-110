# Draw a square and triangle using turtle key 


# make turtle
import turtle
win = turtle.Screen()
t = turtle.Turtle()
win.bgcolor("cyan")

t.pensize(10)               #increase pensize
t.pencolor("white")         #set pen color 
t.shape("arrow")




# While loop to draw a square

num = 0

while num < 4:
    t.forward(150)
    t.right(90)
    num+=1
print("while loop ends")

# make turtle
import turtle
win = turtle.Screen()
t = turtle.Turtle()
win.bgcolor("cyan")

t.pensize(10)               #increase pensize
t.pencolor("white")         #set pen color 
t.shape("arrow")


# For loop to draw a triangle
for tr in range (0,3):
    t.left(120)
    t.forward(200)
print("For a loop has ended")

